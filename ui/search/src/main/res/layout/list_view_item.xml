<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="idViewModel"
            type="com.example.functionality.shared.data.met_api.model.MetObjectId" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/met_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_tile_border"
            android:clickable="true"
            android:padding="@dimen/detail_8"
            android:text="@{String.valueOf(idViewModel.id)}"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12345" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>